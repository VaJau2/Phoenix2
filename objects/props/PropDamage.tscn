[sub_resource type="GDScript" id=1]
script/source = "extends Area

export var damage = 5
var playerHere = false
var creaturesHere = []
var timer = 0.5


func _on_PropDamage_body_entered(body):
	if body.name == \"Player\":
		playerHere = true
	elif body is Enemy && !(\"collared\" in body):
		creaturesHere.append(body)
	set_process(true)


func _on_PropDamage_body_exited(body):
	if body.name == \"Player\":
		playerHere = false
	elif body in creaturesHere:
		creaturesHere.erase(body)

func _process(delta):
	if creaturesHere.size() > 0 || playerHere:
		if timer > 0:
			timer -= delta
		else:
			timer = 1
			
			for creature in creaturesHere:
				creature.TakeDamage(damage)
			if playerHere:
				G.player.stats.TakeDamage(damage, Vector3.ZERO)
	else:
		set_process(false)
"

